<body>
    <div class="d-flex justify-content-center align-items-center">
        <section class="container my-3 text-white">
            
            <div class="row justify-content-center"> <!-- Center the row -->
                <div tabindex="0" class="col-md-10 ml-3 col-lg-5 bg-light p-4 mt-5 mr-3 rounded"> <!-- General Information -->
                    <h2><%= __('general_info') %></h2>
                    
                    <p><%= __('car_repair_description') %></p>
                    <p><%= __('pricing_description') %></p>
                </div>
                <div class="w-120 my-3 "></div> <!-- Gap -->
                <div class="col-md-10 col-lg-5 ml-3 mt-5 mr-3 "> <!-- Visit Our Location -->
                    <div class="row">
                        <div class="col-12 bg-light p-4 d-flex flex-lg-row flex-column justify-content-between align-items-start rounded"> <!-- Responsive Flex Container -->
                            <div> <!-- Text and Address -->
                                <h2><%= __('visit_us') %></h2>
                                <p><%= __('address_label') %></p>
                                <address>
                                    <%= __('address_1') %><br>
                                    <%= __('address_2') %><br>
                                    <%= __('address_3') %>
                                </address>
                            </div>
                            <div class="ml-lg-3 mt-3 mt-lg-0"> <!-- Map -->
                                <div id="map"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    

<section class="py-4">
    <div tabindex=0 class="container text-white bg-light rounded">
        <div class="row justify-content-center ">
            <div class="col-md-10 col-lg-6 p-4 "> <!-- Contact Us Text -->
                <h2><%= __('contact_us') %></h2>
                <p><%= __('contact_description') %></p>
                <p><%= __('call_us') %></p>
            </div>
            <div class="col-md-10 col-lg-6 p-4"> <!-- Contact Form -->
                <form>
                    <div class="form-group">
                        <label for="name"><%= __('name') %></label>
                        <input type="text" class="form-control" id="name" placeholder="<%= __('name_placeholder') %>">
                    </div>
                    <div class="form-group">
                        <label for="email"><%= __('email') %></label>
                        <input type="email" class="form-control" id="email" placeholder="<%= __('email_placeholder') %>">
                    </div>
                    <div class="form-group">
                        <label for="message"><%= __('message') %></label>
                        <textarea class="form-control" id="message" rows="2" placeholder="<%= __('message_placeholder') %>"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary"><%= __('send_message') %></button>
                </form>
            </div>
        </div>
    </div>
</section>
