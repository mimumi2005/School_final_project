
<body>
    <div id="customLoginAlert" class="custom-alert nodisplay">
        <h2><%= __('Successfully logged in') %></h2>
    </div>

    <div class="container text-white mt-5 mx-80">
        <div class="row justify-content-center">
            <div class="col-md-4 bg-light rounded-lg">
                <form class="pl-4 pr-4 pt-4" id="loginForm">
                    <h1 class="text-center"><%= __('Login') %></h1>
                    <div class="form-group">
                        <div id="username-red" class="row ml-0 mb-2" for="username">
                            <%= __('Username or email') %>
                            <span class="ml-1 nodisplay text-danger" id="WrongUsername"><b>- <%= __('Invalid credentials') %></b></span>
                            <span class="ml-1 nodisplay text-danger" id="EmptyUsername"><b>- <%= __('Enter your username') %></b></span>
                        </div>
                        <input type="text" class="form-control" id="username" placeholder="<%= __('Enter your username') %>" maxlength="45">
                    </div>
                    <div class="form-group">
                        <div id="password-red" class="row ml-0 mb-2" for="password">
                            <%= __('Password') %>
                            <span class="ml-1 nodisplay text-danger" id="WrongPassword"><b>- <%= __('Incorrect password') %></b></span>
                            <span class="ml-1 nodisplay text-danger" id="EmptyPassword"><b>- <%= __('Enter a password') %></b></span>
                        </div>
                        <input type="password" class="form-control" id="password" placeholder="<%= __('Enter a password') %>" maxlength="45">
                    </div>
                    <a href="/RecoverPassword">Forgot password?</a>
                    <button type="submit" class="btn btn-secondary btn-block mt-1"><%= __('Login button') %></button>
                    <br>
                </form>
                <a class="text-center btn text-white btn-block mb-3 mt-0" href="/SignUp"><b>Create an account instead?<b></a>
            </div>
            
        </div>
    </div>
    <script nonce="<%= nonce %>">const csrfToken = "<%= csrfToken %>";</script>
    <script src="/js/Login.js" nonce="<%= nonce %>"></script>
</body>