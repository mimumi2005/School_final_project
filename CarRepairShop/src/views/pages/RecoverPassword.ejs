<body>
    <div id="customResetAlert" class="custom-alert nodisplay">
        <h2><%= __('Password reset link sent') %></h2>
    </div>

    <div class="container text-white mt-5 mx-80">
        <div class="row justify-content-center">
            <div class="col-md-4 bg-light rounded-lg p-2">
                <form class="pl-4 pr-4 pt-4" id="resetForm">
                    <h1 class="text-center"><%= __('Reset Password') %></h1>
                    <div class="form-group">
                        <div id="email-red" class="row ml-0 mb-2" for="email">
                            <%= __('Enter your email') %>
                            <span class="ml-1 nodisplay text-danger" id="InvalidEmail"><b>- <%= __('Invalid email address') %></b></span>
                            <span class="ml-1 nodisplay text-danger" id="EmptyEmail"><b>- <%= __('Enter your email') %></b></span>
                        </div>
                        <input type="email" class="form-control" id="email" placeholder="<%= __('Enter your email') %>" maxlength="100">
                    </div>
                    <button type="submit" class="btn btn-secondary btn-block mt-4 "><%= __('Send Reset Link') %></button>
                    <br>
                </form>
                <a class="text-center  btn-block mb-3 mt-0" href="/Login">Back to Login</a>
            </div>
        </div>
    </div>
    <script nonce="<%= nonce %>">const csrfToken = "<%= csrfToken %>";</script>
    <script src="/js/RecoverPassword.js" nonce="<%= nonce %>"></script>
</body>
