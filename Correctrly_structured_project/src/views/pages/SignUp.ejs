                        <div id="username-red" class="row ml-0 mb-2" for="username">Username <span
                                class="ml-1 nodisplay" id="TakenUsername" style=" color:rgb(255, 0, 0)"><b>- Username is
                                    taken</b></span><span class="ml-1 nodisplay" id="EmptyUsername"
                                style="color:rgb(255, 0, 0)"><b>- Enter a username</b></span></div>
                        <input type="text" class="form-control" placeholder="Choose a username" id="username"
                            name="username" maxlength="20">
                    </div>
                    <div class="form-group">
                        <div id="password-red" class="row ml-0 mb-2" for="password">Password <span
                                class="ml-1 nodisplay" id="BadPassword" style=" color:rgb(255, 0, 0)"><b>- enter a safe
                                    password</b></span></div>
                        <input type="password" class="form-control" placeholder="Enter your desired password"
                            id="password" name="password" maxlength="45">
                    </div>
